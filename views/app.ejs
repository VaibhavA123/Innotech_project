            color: inherit;
        }

        /* Header */
        .header {
            background-color: #fff;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 1rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .navbar {
            display: flex;
            gap: 2rem;
            list-style: none;
        }

        .navbar a {
            color: black;
            font-weight: 600;
            font-size: 1.4rem;
            padding: 0.5rem;
            transition: color 0.3s;
        }

        .navbar a:hover, .navbar .active {
            color: #4CAF50;
        }

        .logo {
            font-size: 2.8rem;
            color: #333;
            font-weight: bold;
        }

        .logo span {
            color: #4CAF50; /* Green color for brand */
        }

        .logout-btn {
            background-color: yellow;
            color: white;
            padding: 1rem 2rem;
            border-radius: 2rem;
            font-size: 1.5rem;
            transition: background-color 0.3s;
        }

        .logout-btn:hover {
            background-color: #ffcc00;
        }

        /* Search Bar */
        .search_bar {
            width: 100%;
            padding: 0.7rem;
            border-radius: 0.5rem;
            border: 1px solid #ccc;
            font-size: 1.6rem;
        }

        .search_bar:focus {
            outline: none;
            border-color: #4CAF50;
        }

        /* Ride Section */
        .Ride {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 4rem 2rem;
            background-color: #fff;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .Ride-text {
            flex: 1;
            text-align: left;
        }

        .Ride-text h1 {
            font-size: 3.5rem;
            color: #333;
        }

        .Ride-text h6 {
            font-size: 1.8rem;
            margin-bottom: 2rem;
            color: #4CAF50;
        }

        .Ride-text button {
            font-size: 2rem;
            padding: 1rem 2rem;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 0.5rem;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .Ride-text button:hover {
            background-color: #45a049;
        }

        .Ride-img img {
            width: 100%;
            max-width: 35rem;
            border-radius: 10%;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        /* Footer */
        .footer {
            background-color: #010121;
            color: white;
            padding: 3rem 2rem;
            text-align: center;
        }

        .secure_cite a {
            color: #4CAF50;
            font-size: 1.8rem;
            display: block;
            margin-bottom: 1rem;
            transition: color 0.3s;
        }

        .secure_cite a:hover {
            color: #ffcc00;
        }

        .secure_cite2 h1 {
            font-size: 3rem;
            margin-bottom: 2rem;
            color: #4CAF50;
        }

        .secure_cite2 a {
            font-size: 1.8rem;
            margin-bottom: 1rem;
            color: white;
        }

        .secure_cite3 img {
            width: 8rem;
            height: 8rem;
            border-radius: 10%;
            margin-bottom: 1rem;
        }

        .copyright {
            font-size: 1.6rem;
            color: #4CAF50;
        }

