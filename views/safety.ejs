<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Battery Status</title>

    <style>
        /* Global Styling for the Page */
body {
    font-family: 'Arial', sans-serif;
    background-color: #f4f4f9;
    margin: 0;
    padding: 0;
    color: #333;
}

/* Header Styling */
.header {
    background-color: #fff;
    padding: 1.5rem 0;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 2rem;
}

.navbar {
    display: flex;
    gap: 2rem;
}

.navbar a {
    font-size: 1.5rem;
    color: black;
    text-decoration: none;
    padding: 0.5rem 1rem;
    font-weight: 600;
    transition: background-color 0.3s ease, color 0.3s ease;
}

.navbar a:hover {
    background-color: #f1f1f1;
    color: #ff8c00;
    border-radius: 5px;
}

/* Active Link Styling */
.navbar .active {
    color: #ff8c00;
}

/* Logo Styling */
.logo {
    font-size: 2rem;
    color: black;
    font-weight: bold;
    text-decoration: none;
}

/* Logout Button Styling */
a.logout {
    color: black;
    font-size: 1.5rem;
    text-decoration: none;
    padding: 1.2rem 2rem;
    background-color: yellow;
    border-radius: 2rem;
    font-weight: bold;
    transition: background-color 0.3s ease, transform 0.3s ease;
}

a.logout:hover {
    background-color: #ff8c00;
    transform: scale(1.05);
}

/* Search Bar Styling */
.search_bar {
    font-size: 1.4rem;
    padding: 0.7rem;
    width: 20rem;
    border: 2px solid #ccc;
    border-radius: 1rem;
    outline: none;
    transition: border-color 0.3s ease;
}

.search_bar:focus {
    border-color: #ff8c00;
}

/* Heading Styling */
h1 {
    font-size: 3rem;
    text-align: center;
    margin-top: 5rem;
    color: #333;
    font-weight: bold;
}

/* Table Styling */
table {
    width: 80%;
    margin: 4rem auto;
    font-size: 1.8rem;
    border-collapse: collapse;
    background-color: #fff;
    box-shadow: 0 6px 14px rgba(0, 0, 0, 0.1);
}

td {
    border: 1px solid #ccc;
    padding: 2rem;
    text-align: center;
    font-size: 1.5rem;
}

td:nth-child(odd) {
    background-color: #f9f9f9;
}

td:nth-child(even) {
    background-color: #ffffff;
}

/* Warning and Status Messages */
td.warning {
    background-color: #ff6666;
    color: white;
}

td.success {
    background-color: #28a745;
    color: white;
}

/* Responsive Design for Smaller Screens */
@media (max-width: 1200px) {
    .navbar a {
        font-size: 1.3rem;
    }

    .container {
        flex-direction: column;
        align-items: flex-start;
    }

    .search_bar {
        width: 100%;
        margin-top: 1rem;
    }

    table {
        width: 90%;
    }
}

@media (max-width: 768px) {
    h1 {
        font-size: 2.5rem;
    }

    table {
        width: 100%;
        font-size: 1.6rem;
    }

    td {
        padding: 1.5rem;
    }

    .navbar a {
        font-size: 1.2rem;
        padding: 0.5rem 1rem;
    }
}

    </style>

</head>
<body>






    <header class="header">
        <div class="container">
            <div>
                <nav class="navbar">
                    <a href="/home" class="active" style="color:rgb(8, 194, 8);font-size:2rem;">Home</a>
                    <a href="/service" style="color:black;">Create section</a>
                    <a href="/safety" style="color:black;">Battery_Level</a>
                    <a href="/signup" class="button2" style="color:black;">SignUp</a>
                    <a href="/logout" class="button2" style="color: black;">LogOut</a>
                </nav>
            </div>
            <div><a href="/home" class="logo"><span style="color: rgb(11, 199, 11);">SAFE CITY</span></a></div>
            <div>
                <form action="/">
                    <input type="text" class="search_bar" placeholder="search anything">
                </form>
            </div>
        </div>
        </header>


<h1 style="margin-top: 5rem;font-size:3rem;text-align:center;">Connected User's Battery Level</h1>

    <table style="font-size:1.8rem;border: 1px solid black;border-collapse:collapse;margin:4rem auto;">
        <% for(let list of data) { %>
            <tr style="padding: 2rem;">
                <td style="border:1px solid black; padding:7rem;">User Id : <%= list._id %></td>
                <% if(list.batteryLevel < 99){ %>
                    <td style="border:1px solid black; padding:7rem;">User can be shut down anytime</td>
                    <% } %>
                <td style="border:1px solid black; padding:7rem;background-color:green;color: white;">Battery Level : <%= list.batteryLevel %>%</td>
            </tr>

            <% } %>
    </table>


    <script>
        const searchBar = document.querySelector('form');
const initialAction = searchBar.action; // Store the original form action

searchBar.addEventListener('submit', (e) => {
    // Prevent the form from submitting for demonstration
    console.log(e);

    const inputValue = e.srcElement[0].value.trim(); // Get and sanitize the input value
    if (inputValue) {
        return e.srcElement.action = initialAction +inputValue; // Append value to the action URL
        console.log(`Form action set to: ${e.srcElement.action}`);
    }

    e.srcElement[0].value = ""; // Clear the input field
    e.srcElement.action = initialAction; // Reset to the initial action
});
    </script>
</body>
</html>