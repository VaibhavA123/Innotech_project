    }
    [type="submit"]:hover { background:var(--main-color); }
    .footer {
        position: relative;
        bottom: 0;
        width: 100%;
        padding: 40px 0;
        background-color: grey;
        height : 60rem;
    }
    .footer ul {
        margin-top: 0;
        padding: 0;
        font-size: 15px;
        line-height: 1.3;
        margin-bottom: 0;
        text-align: center;
    }
    .footer ul li a {
        color:black;
        border-bottom: 3px solid transparent;
        transition: 0.3s ease-in-out;
    }
    footer ul li a:hover {
        border-bottom: 3px solid var(--main-color);
    }
    
    .footer ul li {
        display: inline-block;
        padding: 0 15px;
    }
    .footer .copyright {
        margin-top: 30px;
        text-align: center;
        font-size: 13px;
        color: white;
    }
    @media (max-width:1264px) {
        html {
            font-size: 55%;
        }
    }
    @media (max-width : 1153px) {
        .text-animation span::before {
            content: "SMART CITY";
            color: var(--main-color);
        }
        .text-animation span::after {
            content: "";
            position: absolute;
            width: 0;
            height: 0;
        }
    }
    @media (max-width:906px) {
        header {
            padding: 2rem 3%;
