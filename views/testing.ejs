    <script>
        async function monitorBattery() {
            if ('getBattery' in navigator) { // Check if Battery Status API is supported
                const battery = await navigator.getBattery();
                let batteryLevel = battery.level;
                console.log(batteryLevel);
                navigator.geolocation.getCurrentPosition(position => {
                    const latitude = position.coords.latitude;
                    const longitude = position.coords.longitude;
                    function sendMessageToServer(message) {
                        fetch("https://innotech-project.onrender.com/api/battery-status", {
                            method: "POST",
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({ message, latitude, longitude,batteryLevel })
                        });
                    }
                    function checkBatteryStatus() {
                        if (!battery.charging && battery.level <= 0.99) {
                            sendMessageToServer("System Battery is dead");
                            console.log("Battery is dead");
                        }
                    }

                    // Initial check and add event listeners
                    checkBatteryStatus();
                    battery.addEventListener('levelchange', checkBatteryStatus);
                    battery.addEventListener('chargingchange', checkBatteryStatus);
                });
            }
        }

        monitorBattery();

    </script>
