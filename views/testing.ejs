        align-items: center;
        margin-top: 3rem;
        animation: slidefromleft 1s ease forwards;
        opacity: 0;
    }

    @keyframes slidefromleft {
        0% {
            opacity: 0;
            transform: translateX(-100%);
        }
        100% {
